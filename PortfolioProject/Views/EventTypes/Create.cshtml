@model PortfolioProject.Models.EventType

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Event Type</h4>
<p>
	<a class="btn btn-outline-warning" asp-action="Index">All Categories</a>
    <a class="btn btn-outline-secondary" asp-controller="EventForms" asp-action="Create">Go to Event Form</a>
	<a class="btn btn-outline-info" asp-controller="EventForms" asp-action="Index">Go to Event List</a>  
</p>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success" />         
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}