@model IEnumerable<PortfolioProject.Models.GreetingForm>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Message)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>  
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
                  <td>
                    <img height="200" src="~/images/@item.PhotoUrl" alt="@item.Message">
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GreetingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GreetingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GreetingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
